<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leandog.puppies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PuppiesListActivity"
            android:label="@string/title_activity_puppies_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PuppyDetailsactivity"
            android:label="@string/title_activity_puppy_detailsactivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.leandog.puppies.PuppiesListActivity" />
        </activity>
    </application>

</manifest>