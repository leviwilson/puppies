<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/leandog_powered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#caf6f2"
        android:gravity="right"
        android:paddingRight="5dip"
        android:text="@string/leandog_powered"
        android:textColor="#155483"
        android:textSize="@dimen/normal" />

    <ImageView
        android:id="@+id/happy_header"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/content_happy_puppy"
        android:scaleType="fitStart"
        android:src="@drawable/happy_header" />

</RelativeLayout>